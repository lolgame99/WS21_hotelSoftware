<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-cascade="all">
	<class name="at.fhv.se.hotel.managementSoftware.domain.model.Room" table="room" lazy="true">
		<cache usage="read-write"/>
		<composite-id name="roomNumber" class="at.fhv.se.hotel.managementSoftware.domain.model.RoomId">
			<key-property name = "id" column = "id" type = "string"/>
		</composite-id>
		
		<property name="roomStatus" column="status">
			<type name="org.hibernate.type.EnumType">
		    	<param name="enumClass">at.fhv.se.hotel.managementSoftware.domain.enums.RoomStatus</param>
			</type>       
		</property>
		<component name="categoryId" class="at.fhv.se.hotel.managementSoftware.domain.model.RoomCategoryId">
            <property name="id" column="categoryId" type="java.lang.String"/>
            
        </component>
        <many-to-one name="" cascade="all"/>
	</class>
</hibernate-mapping>